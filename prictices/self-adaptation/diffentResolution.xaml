<Window x:Class="self_adaptation.diffentResolution"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:converter="clr-namespace:self_adaptation"
        mc:Ignorable="d"
        Title="diffentResolution" Height="1080" Width="1920" Top="0" Left="0" WindowStyle="None" WindowState="Maximized"
        WindowStartupLocation="CenterScreen" 
        Name="_myWindow"
        >
    <Window.Resources>
        <converter:adaptationHeightSize x:Key="HeightSizeConverter" />
        <converter:adaptationWidthSize x:Key="WidthSizeConverter" />
    </Window.Resources>
    <Grid Name="_grid">
        <TextBox Name="_text" Text="123" Height="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        <Button Style="{StaticResource adaptButton}" Name="_button" Content="button" FontSize="16" Height="960" Width="64" HorizontalAlignment="Left" Margin="106,60,0,60"/>
    </Grid>
</Window>
